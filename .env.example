# Server Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# WhatsApp Configuration
WHATSAPP_SESSION_ID=ai_assistant_session
WHATSAPP_QR_TIMEOUT=60000

# GroqCloud AI Configuration (Required)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile
GROQ_MAX_TOKENS=4000

# Database Configuration
DATABASE_PATH=./data/assistant.db

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Business Configuration (Customize for your sector)
BUSINESS_NAME=Your Business Name
BUSINESS_PHONE=+1234567890
BUSINESS_ADDRESS=Your Business Address
BUSINESS_SECTOR=general
AI_PERSONALITY=helpful and professional
AI_ROLE=customer service assistant

# Custom AI Instructions (Optional)
CUSTOM_PROMPT=Additional instructions for your AI assistant...

# Sector Examples:
# BUSINESS_SECTOR=health (for health consultations)
# BUSINESS_SECTOR=ecommerce (for online store)
# BUSINESS_SECTOR=education (for educational assistance)
# BUSINESS_SECTOR=finance (for financial services)
# BUSINESS_SECTOR=hospitality (for hotels/restaurants)
# BUSINESS_SECTOR=retail (for retail stores)